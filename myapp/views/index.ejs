    <body>
        <div class="container">
            <h1 class="text-center mt-4">Inserting to mongodb database</h1>
            <div class="form-group">
                <form class="form-group m-2" method="post" action="/">
                    <label required class="mb-2" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="name">

                    <label required class="mb-2" for="name">Surname</label>
                    <input class="form-control " type="text" id="surname" name="surname">

                    <label required class="mb-2" for="name">Age</label>
                    <input class="form-control " type="text" id="age" name="age">

                    <label required class="mb-2" for="name">Phone</label>
                    <input class="form-control " type="text" id="phone" name="phone">
                    <div class="text-center">
                        <button class="btn btn-primary m-2" type="submit" id="add-btn">Add person</button>
                        <button class="btn btn-secondary m-2" onclick="location.href='read';" type="button"
                            id="read-btn">Read
                            data</button>
                    </div>
            </div>
        </div>

        <script src="../javascripts/ClientSide.js"></script>

    </body>

